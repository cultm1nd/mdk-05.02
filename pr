    <h1>zadanie1</h1>
    <input type="text" onfocusout="fn1()" id="in1">
    <p id="otvet1"></p>

    <h1>zadanie2</h1>
    <input type="text" id="a">
    <input type="text" id="b">
    <input type="text" id="c">
    <p id="otvet2"></p>
    <button id="btn">go</button>

    <h1>zadanie3</h1>
    <input type="text" onfocusout="fn3()" id="in3">
    <p id="otvet3"></p>

    <h1>zadanie4</h1>
    <input type="text" onfocusout="fn4()" id="in4">
    <p id="otvet4"></p>

    <h1>zadanie5</h1>
    <input type="text" id="in5" onfocusout="fn5()" placeholder="vvedite fio">
    <input type="text" id="f">
    <input type="text" id="i">
    <input type="text" id="o">

    <h1>zadanie6</h1>
    <input type="text" id="in6" onfocusout="fn6()">

    <h1>zadanie7</h1>
    <input type="text" onfocusout="fn7()" id="in7">
    <p id="otvet7"></p>

    <h1>zadanie8</h1>
    <input type="text" onfocusout="fn8()" id="in8">    

    <h1>zadanie9</h1>
    <input type="text" id="in9">
    <p id="otvet9"></p>
    <button onclick="fn9()">go</button>

    <h1>zadanie10</h1>
    <input type="text" onfocusout="fn10()" id="in10"> 
    <p id="otvet10"></p>

